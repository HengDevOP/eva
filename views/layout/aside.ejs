<!-- layout/aside.ejs -->
<aside class="bg-gray-800 h-screen w-64 flex flex-col p-4">
  <!-- Guild Info -->
  <div class="flex flex-col items-center mb-6">
    <% if (guild && guild.icon) { %>
    <img
      src="https://cdn.discordapp.com/icons/<%= guild.id %>/<%= guild.icon %>.png?size=128"
      alt="Guild Icon"
      class="w-20 h-20 rounded-full mb-2"
    />
    <% } else { %>
    <div
      class="w-20 h-20 rounded-full bg-gray-700 flex items-center justify-center mb-2"
    >
      <i class="fas fa-users text-2xl text-gray-400"></i>
    </div>
    <% } %>

    <h2 class="text-white font-bold text-lg text-center">
      <%= guild ? guild.name : "Unknown Guild" %>
    </h2>

    <!-- Subscription -->
    <a
      href="/dashboard/<%= guild.id %>/redeem"
      class="mt-2 px-3 py-1 rounded bg-blue-500 hover:bg-blue-600 text-white text-sm font-medium"
    >
      <%= guild && guild.premium && guild.premium.isEnable ? "Premium Active" :
      "Activate Premium" %>
    </a>
  </div>
</aside>
