    <div class="flex items-center gap-3">
      <img
        src="/transparent.png"
        alt="Bot Logo"
        class="w-10 h-10 rounded-xl shadow-md"
      />
      <span
        class="text-white font-extrabold text-lg tracking-tight drop-shadow-lg"
      >
        Beetle Multipurpose Bot
      </span>
    </div>

    <!-- Middle Section: Links -->
    <div
      class="flex flex-wrap justify-center gap-6 text-gray-300 text-sm sm:text-base"
    >
      <a
        href="/servers"
        class="hover:text-blue-400 transition-all duration-300 font-semibold"
