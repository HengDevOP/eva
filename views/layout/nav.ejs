<!-- Font Awesome -->
<link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
/>

<canvas
  id="seasonCanvas"
  class="fixed top-0 left-0 w-full h-full z-50 pointer-events-none"
></canvas>

<!-- âœ… Header / Navbar -->
<nav
  class="fixed top-0 left-0 w-full bg-gray-900/80 backdrop-blur-xl border-b border-gray-800 shadow-lg z-50 transition-all duration-300"
>
  <div class="max-w-7xl mx-auto px-6 py-4 flex justify-between items-center">
    <!-- Logo -->
    <a href="/" class="flex items-center space-x-6 flex-shrink-0 pr-8 md:pr-12">
      <img
        src="/transparent.png"
        alt="Bot Logo"
        class="w-12 h-12 rounded-xl shadow-md"
      />
      <!-- Hide title on mobile -->
      <span
        class="hidden md:inline text-2xl font-extrabold text-white tracking-tight drop-shadow-lg"
      >
        <%= botName %>
      </span>
    </a>

    <!-- Desktop Menu + User -->
    <div class="flex items-center space-x-6">
      <!-- Desktop Menu -->
      <div
        id="menu"
        class="hidden md:flex items-center space-x-10 <%= !user ? 'mx-auto' : '' %>"
      >
        <a
          href="/servers"
          class="text-gray-300 hover:text-blue-400 transition font-semibold text-lg"
          >Servers</a
        >
        <a
          href="/plugins"
          class="text-gray-300 hover:text-blue-400 transition font-semibold text-lg"
          >Plugins</a
        >
        <a
          href="/support"
          class="text-gray-300 hover:text-blue-400 transition font-semibold text-lg"
          >Support</a
        >
        <a
          href="/pricing"
          class="text-gray-300 hover:text-blue-400 transition font-semibold text-lg"
          >Pricing</a
        >
        <a
          href="/terms-of-service"
          class="text-gray-300 hover:text-blue-400 transition font-semibold text-lg"
          >Terms</a
        >
      </div>

      <!-- User / Login Desktop -->
      <% if (user) { %>
      <div class="hidden md:flex items-center space-x-4 flex-shrink-0">
        <div
          class="flex items-center space-x-3 bg-gray-800/60 px-4 py-1 rounded-full backdrop-blur-sm shadow-md hover:bg-gray-700 transition"
        >
          <a href="/profile">
            <img
              src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>.png?size=64"
              alt="User Avatar"
              class="w-9 h-9 rounded-full border border-gray-700 shadow-sm"
            />
          </a>
          <a
            href="/profile"
            class="text-white font-medium truncate max-w-[140px] hover:text-blue-400 transition-all"
          >
            <%= user.username %>
          </a>
        </div>
        <a
          href="/dashboard"
          class="bg-blue-500 hover:bg-blue-600 text-white font-semibold px-5 py-2 rounded-full transition shadow-md flex items-center gap-2"
        >
          <i class="fas fa-tachometer-alt"></i> Dashboard
        </a>
        <a
          href="/logout"
          class="bg-red-500 hover:bg-red-600 text-white font-semibold px-5 py-2 rounded-full transition shadow-md flex items-center gap-2"
        >
          <i class="fas fa-sign-out-alt"></i> Logout
        </a>
      </div>
      <% } else { %>
      <a
        href="/auth/discord"
        class="hidden md:flex bg-indigo-500 hover:bg-indigo-600 text-white font-semibold px-6 py-2 rounded-full transition shadow-lg items-center gap-2 ml-auto"
      >
        <i class="fab fa-discord text-lg"></i> Login
      </a>
      <% } %>
    </div>

    <!-- Mobile Hamburger -->
    <button
      id="menu-btn"
      class="md:hidden text-gray-300 focus:outline-none hover:text-white transition"
    >
      <i class="fas fa-bars text-2xl"></i>
    </button>
  </div>

  <!-- ðŸ“± Mobile Menu (Hamburger Dropdown) -->
  <div
    id="mobile-menu"
    class="hidden md:hidden flex flex-col items-center text-center space-y-4 px-6 pb-6 bg-gray-800 border-t border-gray-700 shadow-lg"
  >
    <!-- Menu Links -->
    <div class="flex flex-col items-center space-y-3 w-full">
      <a
        href="/servers"
        class="text-gray-300 hover:text-blue-400 transition font-semibold text-lg"
        >Servers</a
      >
      <a
        href="/plugins"
        class="text-gray-300 hover:text-blue-400 transition font-semibold text-lg"
        >Plugins</a
      >
      <a
        href="/support"
        class="text-gray-300 hover:text-blue-400 transition font-semibold text-lg"
        >Support</a
      >
      <a
        href="/pricing"
        class="text-gray-300 hover:text-blue-400 transition font-semibold text-lg"
        >Pricing</a
      >
      <a
        href="/terms-of-service"
        class="text-gray-300 hover:text-blue-400 transition font-semibold text-lg"
        >Terms</a
      >
    </div>

    <!-- User / Login Mobile -->
    <% if (user) { %>
    <div
      class="flex flex-col items-center space-y-2 mt-4 w-full border-t border-gray-700 pt-4"
    >
      <a href="/profile">
        <img
          src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>.png?size=64"
          alt="User Avatar"
          class="w-12 h-12 rounded-full border border-gray-700 shadow-sm"
        />
      </a>
      <a
        href="/profile"
        class="text-white font-medium hover:text-blue-400 transition"
      >
        <%= user.username %>
      </a>
      <a
        href="/dashboard"
        class="bg-blue-500 hover:bg-blue-600 text-white font-semibold px-4 py-1 rounded-full text-sm transition shadow-md w-full text-center"
      >
        <i class="fas fa-tachometer-alt"></i> Dashboard
      </a>
      <a
        href="/logout"
        class="bg-red-500 hover:bg-red-600 text-white font-semibold px-4 py-1 rounded-full text-sm transition shadow-md w-full text-center"
      >
        <i class="fas fa-sign-out-alt"></i> Logout
      </a>
    </div>
    <% } else { %>
    <a
      href="/auth/discord"
      class="bg-indigo-500 hover:bg-indigo-600 text-white font-semibold px-6 py-2 rounded-full mt-4 transition shadow-lg flex items-center gap-2"
    >
      <i class="fab fa-discord"></i> Login
    </a>
    <% } %>
  </div>
</nav>

<script src="/scripts/season.js"></script>
<script>
  document.addEventListener("DOMContentLoaded", () => {
    // // â„ Seasonal effect
    // if (typeof showSeason === "function") {
    //   showSeason("halloween", 100);
    // }

    // ðŸ“± Mobile menu
    const menuBtn = document.getElementById("menu-btn");
    const mobileMenu = document.getElementById("mobile-menu");

    if (menuBtn && mobileMenu) {
      menuBtn.addEventListener("click", (e) => {
        e.stopPropagation();
        mobileMenu.classList.toggle("hidden");
      });

      document.addEventListener("click", (e) => {
        if (!mobileMenu.contains(e.target) && !menuBtn.contains(e.target)) {
          mobileMenu.classList.add("hidden");
        }
      });

      mobileMenu.addEventListener("click", (e) => e.stopPropagation());
    }
  });
</script>
